@using mythos_frontend_dotnet.Pages.Novels.Components

@page "/pruebas"

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-6">
    <MudText Typo="Typo.h4" Class="mb-6 font-weight-bold">Obras Publicadas</MudText>

    <!-- Search Bar -->
    <MudTextField @bind-Value="searchText" Placeholder="Buscar tus obras publicadas" Adornment="Adornment.Start"
        AdornmentIcon="Icons.Material.Filled.Search" Variant="Variant.Outlined" Class="mb-8" FullWidth="true" />

    <!-- Novelas Section -->
    <MudText Typo="Typo.h5" Class="mb-4 font-weight-bold">Novelas</MudText>
    <MudGrid Class="mb-8">
        @foreach (var novela in novelas)
        {
            <MudItem xs="12" sm="6" md="3">
                <NovelCard Book="novela" />
            </MudItem>
        }
    </MudGrid>

    <!-- Cuentos Cortos Section -->
    <MudText Typo="Typo.h5" Class="mb-4 font-weight-bold">Cuentos Cortos</MudText>
    <MudGrid>
        @foreach (var cuento in cuentosCortos)
        {
            <MudItem xs="12" sm="6" md="3">
                <NovelCard Book="cuento" />
            </MudItem>
        }
    </MudGrid>
</MudContainer>

